<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/height_8dp">

    <ImageView
        android:layout_marginTop="@dimen/height_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_openservice" />

    <TextView
        android:layout_marginBottom="@dimen/height_18dp"
        android:id="@+id/btn_openService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_18dp"
        android:background="@drawable/main_btn_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/height_8dp"
        android:paddingLeft="@dimen/height_18dp"
        android:paddingRight="@dimen/height_18dp"
        android:paddingTop="@dimen/height_8dp"
        android:text="去开启打赏服务"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />


</LinearLayout>